{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "./lib",
		"rootDir": "./",
		"composite": true,
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": false,
		"skipLibCheck": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
	}
}
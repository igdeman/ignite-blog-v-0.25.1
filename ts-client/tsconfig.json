{
	"compilerOptions": {
		"target": "es2020",
		"lib": [
			"DOM",
			"es2020",
			"DOM.Iterable",
			"ScriptHost",
			"ES2016.Array.Include"
		],
		"module": "es2020",
		"moduleResolution": "node",
		"outDir": "./lib",
		"rootDir": "./",
		"composite": true,
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": false,
		"skipLibCheck": true,
		"allowJs": true
	},
	"include": [
		"./**/*",
		"./**/*.json",
	],
	"exclude": [
		"node_modules",
		"./lib"
	]
}